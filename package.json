{
  "name": "custom-javaScript-for-websites-2",
  "version": "3.4.4",
  "description": "Run custom JavaScript on any website.",
  "scripts": {
    "analyze": "NODE_ENV=production node utils/analyze.js",
    "build": "node utils/build.js",
    "deploy": "NODE_ENV=production yarn build && yarn zip",
    "zip": "zip -X --compression-method deflate -r build.zip build",
    "prettier": "prettier --no-semi --single-quote --write",
    "lint:ts": "standard --parser typescript-eslint-parser --plugin typescript ./**/*.tsx",
    "lint": "standard",
    "lintfix": "yarn prettier 'src/**/*.{js,ts,tsx}' && yarn lint --fix && yarn lint:ts --fix",
    "start": "node utils/webserver.js",
    "upload:chrome": "node -r dotenv/config ./node_modules/.bin/webstore upload --source build.zip",
    "publish:chrome": "node -r dotenv/config ./node_modules/.bin/webstore publish",
    "publish-extension": "yarn publish:chrome",
    "release": "standard-version",
    "test": "yarn lint && yarn build"
  },
  "dependencies": {
    "@material-ui/core": "^4.8.3",
    "@material-ui/styles": "^4.8.2",
    "chrome-extension-async": "^3.4.1",
    "clean-webpack-plugin": "^3.0.0",
    "js-beautify": "^1.10.2",
    "lodash": "^4.17.15",
    "mobx": "^5.15.1",
    "mobx-react": "^6.1.4",
    "object-sizeof": "^1.5.2",
    "query-string": "^6.9.0",
    "react": "^16.12.0",
    "react-ace": "^8.0.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.91",
    "@types/jasmine": "^3.5.0",
    "@types/jest": "^24.0.25",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-eslint": "^10.0.3",
    "chrome-webstore-upload-cli": "^1.2.0",
    "codecov": "^3.6.1",
    "copy-webpack-plugin": "^5.1.1",
    "coveralls": "^3.0.9",
    "css-loader": "^3.4.2",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-plugin-typescript": "^0.14.0",
    "file-loader": "^5.0.2",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.0.6",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.19.1",
    "progress-bar-webpack-plugin": "^1.12.1",
    "react-axe": "^3.3.0",
    "react-test-renderer": "^16.12.0",
    "regenerator-runtime": "^0.13.3",
    "samsam": "^1.3.0",
    "sinon": "^8.0.4",
    "sinon-chrome": "^3.0.1",
    "speed-measure-webpack-plugin": "^1.3.1",
    "standard": "^14.3.1",
    "standard-version": "^7.0.1",
    "style-loader": "^1.1.2",
    "terser-webpack-plugin": "^2.3.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "typescript-eslint-parser": "^22.0.0",
    "web-ext": "^4.0.0",
    "webpack": "4.39.3",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-dev-server": "^3.10.1",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "standard --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn prettier",
      "standard --parser typescript-eslint-parser --plugin typescript --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "yarn prettier",
      "git add"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "src/js/chrome-extension-async.js",
      "src/lib"
    ],
    "globals": [
      "ace",
      "chrome"
    ]
  }
}
